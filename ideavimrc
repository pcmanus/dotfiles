set hlsearch
set incsearch

let mapleader = " "

map <CR> :action GotoDeclaration<CR>
map <BS> :action Back<CR>

map <leader>b :action RecentFiles<CR>
map <leader>n :noh<CR>
map <leader>f :action FindUsages<CR>
map <leader>r :action RenameElement<CR>
map <leader>q :quit<CR>
map <leader>w :action SaveAll<CR>
map <leader>t :action SearchEverywhere<CR>
map <leader><CR> :action ShowIntentionActions<CR>

map <leader>k :action GotoPreviousError<CR>
map <leader>j :action GotoNextError<CR>

map H :action PreviousTab<CR>
map L :action NextTab<CR>


